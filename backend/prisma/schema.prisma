// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  species     String
  breed       String?
  age         Int?
  sex         String?  // Male, Female, Unknown
  color       String?
  description String?
  imageUrl    String?

  // Unique identifiers for QR and NFC
  qrCode      String   @unique @default(uuid())
  nfcId       String   @unique @default(uuid())

  // Owner information
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Contact information (deprecated - use Contact model)
  ownerPhone  String?
  ownerEmail  String?

  // Emergency info
  vetName     String?
  vetPhone    String?
  medicalInfo String?

  // Lost pet information
  isLost      Boolean  @default(false)
  lostDate    DateTime?
  lastSeenLocation String?

  // Relations
  contacts    Contact[]
  locationScans LocationScan[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([qrCode])
  @@index([nfcId])
  @@index([userId])
  @@index([isLost])
}

model Contact {
  id          String   @id @default(uuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  // Contact details
  name        String
  relation    String?  // Owner, Vet, Friend, Family, etc.
  phone       String?
  email       String?
  address     String?
  facebook    String?
  instagram   String?

  // Priority for display order
  priority    Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([petId])
  @@index([priority])
}

model LocationScan {
  id          String   @id @default(uuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  // Location data
  latitude    Float?
  longitude   Float?
  accuracy    Float?

  // Additional info
  userAgent   String?
  ipAddress   String?

  // Email notification status
  emailSent   Boolean  @default(false)

  createdAt   DateTime @default(now())

  @@index([petId])
  @@index([createdAt])
}
